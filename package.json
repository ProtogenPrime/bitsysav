{
  "name": "bitsy-savior",
  "version": "0.1.0",
  "description": "bitsy editor by Adam Le Doux put in a desktop app. can update game data in exported html files on your disk. super useful when you work with bitsy-hacks",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "clean": "rm -rf ./build/* && echo \"cleaned build location\"",
    "build-macos": "electron-packager . --platform=darwin --arch=x64 --out=build/ --overwrite --icon=src/bitsy/editor/icons/bitsy.icns --ignore=\"src\/bitsy\/(?!editor)\" --ignore=\"test\" && echo \"built for macos\"",
    "build-windows": "electron-packager . --platform=win32  --arch=x64 --out=build/ --overwrite --icon=src/bitsy/editor/icons/bitsy.icns --ignore=\"src\/bitsy\/(?!editor)\" --ignore=\"test\" && echo \"built for windows\"",
    "build-linux": "electron-packager . --platform=linux  --arch=x64 --out=build/ --overwrite --icon=src/bitsy/editor/icons/bitsy.icns --ignore=\"src\/bitsy\/(?!editor)\" --ignore=\"test\" && echo \"built for linux\"",
    "build":  "npm run clean && npm run build-macos && npm run build-linux && npm run build-windows && echo \"build successful\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aloelazoe/bitsy-savior.git"
  },
  "author": "Elkie Nova",
  "bugs": {
    "url": "https://github.com/aloelazoe/bitsy-savior/issues"
  },
  "homepage": "https://github.com/aloelazoe/bitsy-savior#readme",
  "devDependencies": {
    "electron": "^6.0.4",
    "electron-packager": "^14.0.5"
  },
  "dependencies": {
    "fs-extra": "^8.1.0"
  }
}
